{
    "name": "GDAL Dev Container",
    "image": "ghcr.io/osgeo/gdal:alpine-small-3.8.0",

    "runArgs": [
        "-u",
        "vscode",
        "-e",
        "PYTHONUNBUFFERED=1"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "ms-python.python"
            ]
        }
    }
}